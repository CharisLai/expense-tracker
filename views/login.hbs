<div class="row">
    <div class=" col-md-6 mx-auto mt-3">
        <div class="login card card-body mt-5">
            <h3 class="text-center mt-3">Login</h3>
            {{> message}}
            <form action="/user/login" method="POST">
                <div class="mb-3">
                    <label for="email"><i class="fa-solid fa-envelope"></i>&nbsp;&nbsp;Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="mb-2"><i class="fa-solid fa-lock"></i>&nbsp;&nbsp;Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password"
                        required>
                </div>
                <div class="mt-3 d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Login&nbsp;&nbsp;<i
                            class="fa-sharp fa-solid fa-right-to-bracket fa-beat fa-lg"></i></button>
                    <a href="/auth/facebook" class="btn btn-info btn-block">Facebook &nbsp;&nbsp;<i
                            class="fa-sharp fa-solid fa-right-to-bracket fa-beat fa-lg"></i></a>
                </div>
            </form>
            <p class="lead mt-4">
                沒有帳號嗎?&nbsp;<a href="/user/register">點這裡</a>
            </p>
        </div>
    </div>
</div>