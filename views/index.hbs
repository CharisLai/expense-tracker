<body>
    {{!-- <div class="container mt-5"> --}}
        <div class="row justify-content-center">
            <div class="col-8 select group mt-5">
                <select class="form-select" aria-label="Category">
                    <option selected>Category</option>
                    <option value="1">家居物業</option>
                    <option value="2">交通出行</option>
                    <option value="3">休閒娛樂</option>
                    <option value="4">餐飲食品</option>
                    <option value="5">其他</option>
                </select>
            </div>
        </div>
        <!-- Total -->
        <div class="card-body">
            <div class="row justify-content-center mt-4">
                <label for="inputEmail3" class="col-sm-5 col-form-label" style="margin-right: 20%;">總金額：
                    <h1 for="inputEmail3" class="col-sm-2 col-form-label"
                        style="margin-left: 60%; font-size:50px;color:hsl(16.19deg 100% 62.2%)">23456</h1>
                </label>
            </div>
        </div>

        <!--總列表-->

        <div class="row justify-content-center" style="align-items:center">
            {{#each data}}
            <div class="card-body d-inline-flex justify-content-center" style="padding-left: 0px;padding-right: 100px;">
                <div class="col-6 row p-3 ">
                    <div class="col-2 d-flex" style="align-items:center">
                        {{this.icon}}
                    </div>
                    <div class="col-5" style=" ">
                        <h5 class=" m-0">{{this.name}}</h5>
                        <p class="m-0">{{this.date}}</p>
                    </div>
                    <div class="col-3 d-inline-flex" style="align-items:center; justify-content:flex-start">
                        {{this.amount}}
                    </div>
                    <div class="col-2 d-inline-flex">
                        <div class="col-4 d-flex" style="align-items:center">
                            <a class="btn btn-light" href="/expense/edit">Edit</a>
                            <form action="/" method="POST" style="align-items:center" class="col d-flex">
                                <button class="btn btn-light" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <!--新增支出-->
        <div class="row">
            <div class="text-center" style="margin-right:10px; ">
                <a href="/expense/new" class="col-xs-6 col-sm-2 btn btn-outline-light"
                    style="background-color:#db6c3d;">新增支出</a>
            </div>
        </div>
        {{!--
    </div> --}}
</body>