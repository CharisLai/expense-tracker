<body>
    <div class="row justify-content-center">
        <div class="col-8 select group mt-5">
            <div class="dropdown d-flex justify-content-center">

                {{!--selected --}}
                <form style="width: 50%;" action="/filter" method="GET">
                    <select class="form-select justify-content-center" aria-label="category" name="category"
                        id="category" onchange="this.form.submit()">
                        <option value="" selected>選擇類別</option>
                        {{#each categories}}
                        <option value="{{this._id}}">
                            {{this.name}}
                        </option>
                        {{/each}}
                    </select>
                </form>

            </div>
        </div>
    </div>

    <!-- Total -->
    <div class="card-body mx-auto ">
        <div class="record row d-f justify-content-center mt-3" style="">
            <label for="totalAmount" class="col-sm-3 col-form-label">
                <h3 style="margin-right: 50%; ">總金額</h3>
                <h1 for=" totalAmount" class="col-sm-2 col-form-label"
                    style="margin-left: 0%; font-size:50px; color:hsla(100, 75%, 28%, 0.993);" name="totalAmount"
                    type="number" min="0">
                    NT$&nbsp;{{totalAmount}}
                </h1>
            </label>
        </div>
    </div>

    <!--總列表-->
    <div class="record row justify-content-center">
        <table class="table table-striped" style="width: 50%;">
            <thead>
                <tr>
                    <th scope="col">類別</th>
                    <th scope="col">名稱</th>
                    <th scope="col">日期</th>
                    <th scope="col">金額</th>
                    <th scope="col">操作&nbsp;&nbsp;&nbsp;<a href="/"><i class="fa-solid fa-arrows-rotate"></i></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each records}}
                <tr>
                    <td><i class="{{this.categoryId.icon}}"></i></td>
                    <td>{{this.name}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.amount}}</td>
                    <td>
                        <div class="button-group ">
                            <a class="btn btn-primary" href="/expense/{{this._id}}/edit"><i
                                    class="fa-regular fa-pen-to-square"></i></a>
                            <form action="/expense/{{this._id}}?_method=DELETE" method="POST">
                                <button class="btn btn-outline-danger" type="submit"
                                    onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)"><i class="fa-solid fa-trash"
                                        style="color: #ff0000;"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!--新增支出-->
    <div class="row">
        <div class="text-center" style="margin-right:10px;">
            <a href="/expense/new" class="col-xs-6 col-sm-2 btn btn-outline-light"
                style="background-color:#db6c3d;">新增支出</a>
        </div>
    </div>
</body>