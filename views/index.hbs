<head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>

<body>
    <div class="row justify-content-center">
        <div class="col-8 select group mt-5">
            <div class="dropdown d-flex justify-content-center">

                {{!--selected --}}
                <form style="width: 50%;" action="/filter" method="GET">
                    <select class="form-select justify-content-center" aria-label="category" name="category"
                        id="category" onchange="this.form.submit()">
                        <option value="all" selected>全部</option>
                        {{#each categories}}
                        <option value="{{this._id}}">
                            {{this.name}}
                        </option>
                        {{/each}}
                    </select>
                </form>

            </div>
        </div>
    </div>

    <!-- Total -->
    <div class="card-body">
        <div class="row justify-content-center mt-3">
            <label for="totalAmount" class="col-sm-5 col-form-label text-center" style="margin-right: 20%;">總金額：
                <h1 for="totalAmount" class="col-sm-2 col-form-label"
                    style="margin-left: 70%; font-size:50px;color:hsl(16.19deg 100% 62.2%)" name="totalAmount"
                    type="number" min="0">
                    {{totalAmount}}
                </h1>
            </label>
        </div>
    </div>

    <!--總列表-->
    <div class="row justify-content-center">
        <table class="table table-striped" style="width: 50%;">
            <thead>
                <tr>
                    <th scope="col">類別</th>
                    <th scope="col">名稱</th>
                    <th scope="col">日期</th>
                    <th scope="col">金額</th>
                    <th scope="col">操作</th>
                </tr>
            </thead>
            <tbody>
                {{#each records}}
                <tr>
                    <td><i class="{{this.categoryId.icon}}"></i></td>
                    <td>{{this.name}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.amount}}</td>
                    <td>
                        <div class="button-group">
                            <a class="btn btn-info" href="/expense/{{this._id}}/edit">Edit</a>
                            <form action="/expense/{{this._id}}?_method=DELETE" method="POST">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <!--新增支出-->
    <div class="row">
        <div class="text-center" style="margin-right:10px;">
            <a href="/expense/new" class="col-xs-6 col-sm-2 btn btn-outline-light"
                style="background-color:#db6c3d;">新增支出</a>
        </div>
    </div>
</body>